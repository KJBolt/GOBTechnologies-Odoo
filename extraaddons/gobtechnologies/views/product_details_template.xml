<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_details_template" name="Product Details">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <t t-if="product">
                    <div class="container py-5">
                        <!-- Main product card -->
                        <div class="card shadow-sm rounded-3 border-0 overflow-hidden mb-5">
                            <div class="row g-0">
                                <!-- Product image column -->
                                <div class="col-md-6 d-flex align-items-center justify-content-center p-4">
                                    <img t-att-src="'/web/image/product.template/%s/image_1920' % (product.id)" 
                                        t-att-alt="product.name" 
                                        class="img-fluid rounded-3" 
                                        style="max-height: 500px; object-fit: contain;"
                                    />
                                </div>
                                
                                <!-- Product details column -->
                                <div class="col-md-6">
                                    <div class="card-body p-4 p-lg-5">
                                        <h2 class="card-title mb-3"><t t-esc="product.name"/></h2>
                                        
                                        <!-- Product description -->
                                        <p class="card-text text-muted mb-4">
                                            <t t-esc="product.description_sale or ''"/>
                                        </p>
                                        
                                        <hr class="my-4"/>
                                        
                                        <!-- Payment options section -->
                                        <div class="payment-plan">
                                            <h4 class="mb-3">Payment Options</h4>
                                            
                                            <div class="mb-4">
                                                <label for="payment_plan" class="form-label fw-bold">Payment Plan</label>
                                                <select id="payment_plan" class="form-select form-select-lg mb-3">
                                                    <option value="" disabled="disabled" selected="selected">Select payment plan</option>
                                                    <option value="60">60 days</option>
                                                    <option value="90">90 days</option>
                                                    <option value="120">120 days</option>
                                                </select>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <label for="repayment_frequency" class="form-label fw-bold">Repayment Frequency</label>
                                                <select id="repayment_frequency" class="form-select form-select-lg mb-3">
                                                    <option value="" disabled="disabled" selected="selected">Select frequency</option>
                                                    <option value="daily">Daily - 42 GHS</option>
                                                    <option value="weekly">Weekly - 294 GHS</option>
                                                </select>
                                            </div>
                                            
                                            <!-- Order Summary -->
                                            <div class="card bg-light mb-4">
                                                <div class="card-header bg-primary text-white">
                                                    <h5 class="mb-0">Order Summary</h5>
                                                </div>
                                                <div class="card-body">
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                                            <span>Payment plan</span>
                                                            <span>60 days</span>
                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                                            <span>Repayment frequency</span>
                                                            <span>Daily - 42 GHS</span>
                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                                            <span>Initial Deposit</span>
                                                            <span>1,400 GHS</span>
                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 border-bottom-0">
                                                            <span class="fs-5">Total amount</span>
                                                            <span class="fs-5 fw-bold">2,400 GHS</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            
                                            <button class="btn btn-primary btn-lg w-100 py-3 fw-bold">
                                                <i class="fa fa-shopping-cart me-2"></i>Proceed to Payment
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
