<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone template that calls the website layout -->
    <template id="product_page_template" name="Product Page Template">
        <t t-call="website.layout">
            <!-- Wrap your page content in #wrap to fit the layout's structure -->
            <div id="wrap" class="oe_structure">
                <div class="container mt-4">
                    <!-- Search Form -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form action="/shop/products" method="get" class="d-flex">
                                <input type="text" name="search" placeholder="Search products..." 
                                    t-att-value="search_query or ''" class="form-control me-2"/>
                                <button type="submit" class="btn btn-primary">Search</button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Display search results info -->
                    <t t-if="search_query">
                        <div class="row mb-3">
                            <div class="col-12">
                                <p class="text-muted">
                                    Search results for: <strong t-esc="search_query"/>
                                    <t t-if="not products"> - No products found</t>
                                </p>
                            </div>
                        </div>
                    </t>
                    
                    <div class="row">
                        <t t-foreach="products" t-as="product">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <!-- Image with overlay -->
                                    <div class="position-relative">
                                        <t t-if="product.image_1920">
                                            <img t-att-src="'/web/image/product.template/%s/image_1920' % (product.id)"
                                                class="card-img-top"
                                                t-att-alt="product.name"
                                                style="height: 300px; object-fit: contain;"
                                            />
                                        </t>
                                        <t t-else="">
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                                <i class="fa fa-image fa-3x text-muted"></i>
                                            </div>
                                        </t>
                                        <!-- Badge for new products or special offers -->
                                        <t t-if="product.public_categ_ids">
                                            <span class="position-absolute top-0 start-0 badge rounded-pill bg-success m-2">
                                                <t t-esc="product.public_categ_ids[0].name"/>
                                            </span>
                                        </t>
                                    </div>
                                    
                                    <!-- Body -->
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title"><t t-esc="product.name"/></h5>
                                        
                                        <!-- Price information -->
                                        <!-- <div class="mb-3">
                                            <h6 class="text-primary fw-bold">
                                                <t t-esc="product.currency_id.symbol"/><t t-esc="product.list_price"/>
                                            </h6>
                                        </div> -->

                                        <!-- Product Attributes -->
                                        <t t-if="product.attribute_line_ids">
                                            <div class="mb-3">
                                                <div class="attributes-container">
                                                    <t t-foreach="product.attribute_line_ids" t-as="attribute_line">
                                                        <div class="attribute-group mb-2">
                                                            <!-- <strong><t t-esc="attribute_line.attribute_id.name"/>:</strong> -->
                                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                                <t t-foreach="attribute_line.product_template_value_ids" t-as="ptav">
                                                                    <t t-set="attribute_price" t-value="ptav.price_extra"/>
                                                                    <span class="badge bg-light text-dark position-relative">
                                                                        <t t-esc="ptav.name"/>
                                                                        <t t-if="attribute_price != 0">
                                                                            <span class="attribute-price-difference">
                                                                                (<t t-if="attribute_price > 0"></t><t t-esc="product.currency_id.symbol"/><t t-esc="attribute_price"/>)
                                                                            </span>
                                                                        </t>
                                                                    </span>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </t>
                                        
                                        <!-- Action buttons -->
                                        <div class="mt-auto">
                                            <a t-attf-href="/shop/product/{{ product.id }}" 
                                                class="btn btn-primary w-100">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <!-- Footer with additional info -->
                                    <div class="card-footer bg-white border-0">
                                        <small class="text-muted">
                                            <t t-if="product.qty_available > 0">
                                                <i class="fa fa-check-circle text-success"></i> In Stock
                                            </t>
                                            <t t-else="">
                                                <i class="fa fa-times-circle text-danger"></i> Out of Stock
                                            </t>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </t>
                        
                        <!-- Display message if no products found -->
                        <t t-if="not products">
                            <div class="col-12">
                                <div class="alert alert-info text-center" role="alert">
                                    <t t-if="search_query">
                                        <h4>No products match your search criteria</h4>
                                        <p>Try different keywords or browse all products</p>
                                    </t>
                                    <t t-else="">
                                        <h4>No products available at the moment</h4>
                                        <p>Please check back later</p>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>