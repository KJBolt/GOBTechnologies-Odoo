    </record> -->

    <menuitem 
        id="menu_repayment_root" 
        name="Hire Purchase"
        sequence="1"
    />

    <menuitem 
        id="menu_repayment" 
        name="Hire Purchase"
        parent="menu_repayment_root"
        action="action_repayment"
    />

